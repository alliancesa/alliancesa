<div class="container-fluid">
    {{#each erros}}
        <div class="alert alert-danger"> {{texto}} </div>
    {{else}}

    {{/each}}

    <div class="card border shadow  empresa-fundo border-left-primary border-right-primary col-lg-4">
        <pre></pre>
        <div class="card-menu">REMOÇÃO DE USUÁRIOS</div>
        <pre></pre>
    </div>
    </br>

    {{#if aUsuarios}}
        <div class="container">
            <div class="card border shadow h-100 py-2">
                <div class="card-body table-responsive-sm">
                    <table class="table" style="font-size: 12px;">
                    <thead>
                        <tr>
                            <th scope="col" align="center" bgcolor="#DFEFFF">#</th>
                            <th scope="col" align="center" bgcolor="#DFEFFF">Nome</th>
                            <th scope="col" align="center" bgcolor="#DFEFFF">E-Mail</th>
                            <th scope="col" align="center" bgcolor="#DFEFFF">Admin</th>
                            <th scope="col" align="center" bgcolor="#DFEFFF">Usuário ERP</th>
                            <th scope="col" align="center" bgcolor="#DFEFFF">Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each aUsuarios}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{Nome}}</td>
                            <td>{{Email}}</td>
                            <td>{{Admin}}</td>
                            <td>{{UserERP}}</td>
                            <td><a href="/Usuarios/Del/{{id}}"><button class="btn btn-sm btn-primary">Remover</button></a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>        
    {{/if}}

    {{#each aUsuariosDel}}
        <div class="container">
            <div class="card border shadow h-100 py-2">
                <div class="card-body table-responsive-sm">
                    <form action="/Usuarios/Del" method="POST">
                        <div class="row">
                            <div class="col-2">
                                <label>Nome</label>
                            </div>
                            <div class="col-6">
                                <input type="text"  class="form-control" value="{{Nome}}" disabled="disabled">
                                <input type="hidden" name="id" class="form-control" value="{{id}}" placeholder="Código">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-2">  
                                <label>E-Mail</label>
                            </div>
                            <div class="col-6">
                                <input type="text" name="Email" class="form-control" value="{{Email}}" placeholder="Descrição" disabled="disabled">
                            </div>
                        </div>
                        <div>   
                            <button type="submit" class="btn bt-sm btn-primary">Remover</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>