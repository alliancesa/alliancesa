                cMsg2 += "   segundos                                                                        "
                cMsg2 += " </p>                                                                              "   
                
                document.getElementById("dTempo").innerHTML = cMsg2
            
                var counter = 3;
                $('#delayTime').text(counter);  
                var intID = setInterval(function() {
                    counter--;
                    $('#delayTime').text(counter);

                    if (counter == 0) {
                        window.location.replace("https://www.mir4global.com/");
