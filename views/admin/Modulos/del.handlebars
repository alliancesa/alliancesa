
<div class="container-fluid">
    {{#each erros}}
        <div class="alert alert-danger"> {{texto}} </div>
    {{else}}

    {{/each}}

    
        {{#if aModulosList}}
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body table-responsive-sm">
                    <table class="table" style="font-size: 12px;" id="Busca">
                        <thead>
                            <tr>
                                <td scope="col" align="center" bgcolor="#DFEFFF"><strong>Código</strong></td>
                                <td scope="col" align="center" bgcolor="#DFEFFF"><strong>Descrição</strong></td>
                                <td scope="col" align="center" bgcolor="#DFEFFF"><strong>Status</strong></td>
                                <td scope="col" align="center" bgcolor="#DFEFFF"><strong>Ação</strong></td>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each aModulos}}
                            <tr>
                                <td align="center"><strong>{{Codigo}}</strong></td>
                                <td align="center">{{Descricao}}</td>
                                <td align="center">{{Status}}</td>
                                <td align="center">
                                    <a href="/Admin/Modulos/del/{{Codigo}}">
                                        <button class="btn btn-outline-danger btn-sm" id="Imp">Remover</button> 
                                    </a>
                                </td>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        {{/if}}
    
    
    
    
     {{#if aSubModulosList}}
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body table-responsive-sm">
                <table class="table" style="font-size: 12px;" id="Busca">
                    <thead>
                        <tr>
                            <td scope="col" align="center" bgcolor="#DFEFFF"><strong>Sub-Código</strong></td>
                            <td scope="col" align="center" bgcolor="#DFEFFF"><strong>Descrição</strong></td>
                            <td scope="col" align="center" bgcolor="#DFEFFF"><strong>Modulos</strong></td>
                            <td scope="col" align="center" bgcolor="#DFEFFF"><strong>Status</strong></td>
                            <td scope="col" align="center" bgcolor="#DFEFFF"><strong>Ação</strong></td>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each aModulos}}
                            <tr>
                                <td><strong>{{Codigo}} - {{Descricao}}</strong></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                            {{#each ../aModulos2}}
                                {{#if_eq Codigo ../Codigo}}
                                <tr>
                                    <td align="center">{{SubCodigo}}</td>
                                    <td align="center">{{Descricao}}</td>
                                    <td align="center">{{Modulos}}</td>
                                    <td align="center">{{Status}} </td>
                                    <td align="center">
                                    <form action="/Admin/Modulos/del" method="post">
                                        <input type="hidden" id="Codigo" name="Codigo" value="{{Codigo}}">
                                        <input type="hidden" id="SubCodigo" name="SubCodigo" value="{{SubCodigo}}">
                                        <button class="btn btn-outline-danger btn-sm" type="submit">Remover</button> 
                                    </form>   
                                    </td>
                                </tr>
                                {{/if_eq}}
                            {{/each}}
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    {{/if}}

</div>