    {{#each erros}}
        <div class="alert alert-danger"> {{texto}} </div>
    {{else}}

    {{/each}}

    {{#if aTurnosEDITList}}
    <label><strong>Alterar Cadastro de Turnos</strong></label>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Código</th>
                <th scope="col">Descrição</th>
                <th scope="col">Status</th>
                <th scope="col">Ação</th>
            </tr>
        </thead>
        <tbody>
            {{#each aTurnosEDITList}}
            <tr>
                <th scope="row">-</th>
                <td>{{id}}</td>
                <td>{{Descricao}}</td>
                <td>{{Status}}</td>
                <td><a href="/admin/Turnos/edit/{{id}}"><button class="btn btn-primary">Alterar</button></a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{/if}}

    {{#each aTurnos}}
    <form action="/admin/Turnos/edit" method="POST">
        <label><strong>Alterar Cadastro de Turnos</strong></label>
        <div class="card">
            <div class="card-body">
                <div>    
                    <label>Código</label>
                    <input type="text"  class="form-control" value="{{id}}" disabled="disabled">
                    <input type="hidden" name="id" class="form-control" value="{{id}}" placeholder="Código">
                </div>
                <p></p>
                <div>   
                    <label>Descrição</label>
                    <input type="text" name="Descricao" class="form-control" value="{{Descricao}}" placeholder="Descrição">
                </div>
                <p></p>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="{{Status}}" name="Status">
                    <label class="form-check-label" for="defaultCheck1">Status</label>
                </div>
                <p></p>
                <div>   
                    <button type="submit" class="btn btn-primary">Alterar</button>
                </div>
            </div>
        </div>        
    </form>
    {{/each}}