    {{#each erros}}
        <div class="alert alert-danger"> {{texto}} </div>
    {{else}}

    {{/each}}

    <form action="/admin/Falhas/add" method="POST">
        <label><strong>Cadastro de Falhas</strong></label>
        <div class="card">
            <div class="card-body">
                <div>   
                    <label>Código</label>
                    <input type="text" name="Codigo" class="form-control" placeholder="Código" id="Codigo">
                </div>
                <p></p>
                <div>   
                    <label>Empresa</label>
                    <select class="form-control" id="Empresa" name="Empresa">
                        {{#each aListEmpresas}}
                            <option value=""></option>
                            <option value="{{id}}">{{Descricao}}</option>
                        {{/each}}                    
                    </select>
                </div>
                <p></p>
                <div>   
                    <label>Descrição</label>
                    <input type="text" name="Descricao" class="form-control" placeholder="Descrição">
                </div>
                <p></p>
                <div>   
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                </div>
            </div>
        </div>        
    </form>