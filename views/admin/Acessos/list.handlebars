<div class="container-fluid">
    
    <div class="container">
        <div class="card shadow table-responsive-sm">
            <div class="card border shadow h-100 py-2">
                <div class="card-body">
                    <table class="table" style="font-size: 12px;" id="Busca">
                        <thead>
                            <tr>
                                <td scope="col" align="center" bgcolor="#DFEFFF"><strong>Código Usuário</strong></td>
                                <td scope="col" align="center" bgcolor="#DFEFFF"><strong>Usuário</strong></td>
                                <td scope="col" align="center" bgcolor="#DFEFFF"><strong></strong></td>
                                <td scope="col" align="center" bgcolor="#DFEFFF"><strong>Ação</strong></td>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each aUsuarios}}
                            <tr>
                                <td align="center">{{ID_User}}</td>
                                <td align="center">{{Nome}}</td>
                                <td align="center"></td>
                                <td align="center">
                                    <button type="button" class="btn btn-outline-dark btn-sm" data-toggle="modal"
                                        data-target="#modalExemplo_{{ID_User}}">+Mais</button>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
{{#each aUsuarios }}
<div class="modal fade bd-example-modal-lg" id="modalExemplo_{{ID_User}}" tabindex="-1" role="dialog"
    aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ID_User}} - {{Nome}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table" style="font-size: 12px;" id="Busca">
                    <thead>
                        <tr>
                            <td scope="col" align="center" bgcolor="#DFEFFF"><strong>Modulo</strong></td>
                            <td scope="col" align="center" bgcolor="#DFEFFF"><strong>Sub-Código</strong></td>
                            <td scope="col" align="center" bgcolor="#DFEFFF"><strong>Modulo</strong></td>
                            <td scope="col" align="center" bgcolor="#DFEFFF"><strong>Adicionar </strong></td>
                            <td scope="col" align="center" bgcolor="#DFEFFF"><strong>Alterar </strong></td>
                            <td scope="col" align="center" bgcolor="#DFEFFF"><strong>Remover </strong></td>
                            <td scope="col" align="center" bgcolor="#DFEFFF"><strong>Visualizar </strong></td>
                            <td scope="col" align="center" bgcolor="#DFEFFF"><strong>Status</strong></td>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each ../aModulos}}
                            <tr>
                                <td><strong>{{Descricao}}</strong></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                            {{#each ../../aAcessos}}
                                {{#if_eq ../Codigo Ace_Codigo}}
                                    {{#if_eq ID_User ../../ID_User}}
                                        <tr>
                                            <td align="center"></td>
                                            <td align="center">{{SubCodigo}}</td>
                                            <td align="center">{{Descricao2}}</td>
                                            <td align="center">{{Adicionar}}</td>
                                            <td align="center">{{Alterar}}</td>
                                            <td align="center">{{Remover}}</td>
                                            <td align="center">{{Visualizar}}</td>
                                            <td align="center">{{Status}} </td>
                                        </tr>
                                    {{/if_eq}}
                                {{/if_eq}}
                            {{/each }}
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
{{/each}}